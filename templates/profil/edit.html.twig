{% extends 'base.html.twig' %}

{% block title %}Edition de l'utilisateur {{ user.nom }} {% endblock %}

{% block body %}
    <div class="container">
		<div class="row">
			<div class="col">
                <h1> Modification du compte {{ user.nom }}</h1>

                {{ form_start(form) }}
                    {{ form_row(form.nom) }}
                    {{ form_row(form.prenom) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.phone) }}
                    
                    <button type="submit" class="btn btn-lg btn-info my-3"> Modifier </button>

                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-primary" href="{{ path('profil_index', {'id': user.id}) }}">Accueil</a>
                        {{ include('profil/_delete_form.html.twig') }}
                    {% endif %}
                    
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
